<Project>

  <Import Project="../../src/Spice/MSBuild/Spice.props" />
  <Import Sdk="Microsoft.NET.Sdk" Project="Sdk.props" />

  <PropertyGroup>
    <TargetFramework Condition=" '$(RuntimeIdentifier)' != '' and $(RuntimeIdentifier.StartsWith(`android-`)) ">net10.0-android</TargetFramework>
    <TargetFramework Condition=" '$(RuntimeIdentifier)' != '' and ($(RuntimeIdentifier.StartsWith(`iossimulator-`)) or $(RuntimeIdentifier.StartsWith(`ios-`))) ">net10.0-ios</TargetFramework>
    <TargetFramework Condition=" '$(TargetFramework)' == '' ">net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <SingleProject>true</SingleProject>

    <!-- net10.0 is a plain test library; mobile TFMs are Exe (test apps) -->
    <OutputType Condition=" '$(TargetFramework)' != 'net10.0' ">Exe</OutputType>

    <ApplicationTitle>Spice.Tests</ApplicationTitle>
    <ApplicationId>com.jonathanpeppers.spice.tests</ApplicationId>
    <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
    <ApplicationVersion>1</ApplicationVersion>

    <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">16.0</SupportedOSPlatformVersion>
    <SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>

    <!-- xUnit/xharness packages are not trimmer-compatible -->
    <TrimMode>partial</TrimMode>
    <SuppressTrimAnalysisWarnings>true</SuppressTrimAnalysisWarnings>

    <!-- Disable AOT on iOS â€” simulator supports JIT natively -->
    <RunAOTCompilation Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">false</RunAOTCompilation>
    <PublishTrimmed Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">false</PublishTrimmed>

    <!-- Android: disable AOT so xUnit's reflection-based test discovery works.
         Assembly store remains enabled (default); xUnit loads via Assembly.Load(). -->
    <RunAOTCompilation Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">false</RunAOTCompilation>
  </PropertyGroup>

  <!-- Desktop test runner packages (net10.0 only) -->
  <ItemGroup Condition=" '$(TargetFramework)' == 'net10.0' ">
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="18.0.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="3.1.5">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="coverlet.collector" Version="6.0.4">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <!-- Shared test framework -->
  <ItemGroup>
    <PackageReference Include="xunit" Version="2.9.3" />
  </ItemGroup>

  <!-- XHarness test runners for device tests -->
  <ItemGroup Condition=" '$(TargetFramework)' != 'net10.0' ">
    <PackageReference Include="xunit.runner.utility" Version="2.9.3" />
    <PackageReference Include="Microsoft.DotNet.XHarness.TestRunners.Xunit" Version="11.0.0-prerelease.26114.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Spice\Spice.csproj" />
  </ItemGroup>

  <Import Sdk="Microsoft.NET.Sdk" Project="Sdk.targets" />
  <Import Project="../../src/Spice/MSBuild/Spice.targets" />

</Project>
